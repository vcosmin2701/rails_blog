<h1>New article</h1>

<div class="bg-white shadow-md rounded px-4 pt-6 pb-8 mb-4">
  <%= form_with model: @article do |form| %>
    <div class="block text-gray-700 text-sm font-bold mb-2 "> 
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="block text-gray-700 text-sm font-bold mb-2">
      <%= form.label :body %><br>
      <%= form.text_area :body %>
      <% @article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="container mx-auto">
      <div class="bg-blue-300 hover:bg-blue-500 text-white font-bold py-2 rounded focus:outline-none focus:shadow-outline">
        <%= form.submit %>
      </div>
    </div>
  <% end %>
</div>